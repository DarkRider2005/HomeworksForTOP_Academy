<Window x:Class="WordPad_FinallyProject.InputPaddingBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordPad_FinallyProject"
        mc:Ignorable="d"
        Title="InputPaddingBoxxs" Height="200" Width="400">
    <Grid>
        <TextBlock FontSize="14" Width="300" Height="20" Text="{Binding TitleActionText, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" Margin="0,56,0,108"/>
        <TextBox x:Name="TextBox" FontSize="14" Width="150" Height="20"/>
    </Grid>
</Window>
